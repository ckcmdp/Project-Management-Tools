<%=render 'navbar'%>

<section class="container show_feature">
    <h2>About Feature</h2>
    <div class="about_feature">
        <div class = "identity_token">
            <span>Identity Token :-- <%=@feature.identity_token %></span>
        </div>
        <hr>
        <div class = "assigned_member">
            <h2>Assigned Member</h2>
            <span> Email:--  <%= @feature.mailId %><br></span>
        </div>
        <hr>

        <div class= "feature_info">
            <h3>Feature Information :-- </h3><br>
            <div class = "feature_status">    
                <span>Status:--<%=@feature.status%></span>
            </div>
            <div class = "feature_panel">    
                <span>Panel:- <%= @feature.panels %><br></span>
            </div>    
            <div class = "feature_title">    
                <span> Feature Title:--  <%= @feature.title %></span>
            </div>
            <div class = "feature_description">    
                <span>  Feature Description:--</span>
                <%= @feature.description %>
            </div> 
            <section class = "picture">
                <%= image_tag @feature.picture.url if @feature.picture? %>
                    <div class = "feature_picture">
                        <span>Feature Picture</>
                    </div>
            </section>  
        </div>
        

        <div class="Task">
            <h3>Task Information:-  </h3>
            <span>No of Tasks:- <%= @feature.jobs.count %></span><br>
            <span>No of Tasks Completed:-(<%=@feature.jobs.count%>/0)</span>
            <%= render @feature.jobs %>     
            <%=link_to 'Add more task or edit feature',  edit_feature_path(), method: :get, class: 'btn btn-primary'%><br><br>
        </div>
    </div>
    
    <hr>
    <h4>Comment Box</h4>

    <section class="Chat box">
            Comments:- 
            <div id = "comments">
                <%= render @feature.comments %>
            </div>
    </section> 
    <hr>    
    
    <section class="Comments">
        <h4>Chat Box</h4>
        <div class="comment-form">
            <h3 class="subtitle is-3">Leave a reply</h3>
            <%= render 'comments/form' %>
        <div>    
    </section>
</section>