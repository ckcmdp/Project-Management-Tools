<section class="container">
    <nav class="navbar navbar-expand-lg navbar-light">
        <h1>Project Management Tool</h1>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button> 
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <%= link_to "ALL PROJECTS", user_projects_profile_path(@user) , method: :get, class: "custom2" %>
                </li>
                <li class="nav-item active">
                    <%= link_to "EDIT PROFILE", edit_user_path , method: :get, class: "custom"%>
                </li>
                <li class="nav-item active">
                    <%= link_to "DELETE", user_path , method: :delete , data: { confirm: "Are you sure?"}, :class => "custom" %> 
                </li>
                <li class="nav-item active">
                    <%= link_to "LOG OUT", welcome_path , method: :delete%>
                </li>
            </ul>
        </div>
    </nav> 
</section>
<div class="auth_section">
    <section class="container">    
        <h1 class="text-center">Welcome <%=@user.firstname%></h1>
        <p class="text-center">This is our home page click the below button to Create Project</p>
        <%= link_to " Create Project", create_project_path ,method: :get, :class => "btn btn-primary button fa fa-plus-circle rend"%>
    </section>
</div>
<h2 class="text-center text">Search for the feature</h2>
<section class= "container">
    <h4>Search Feature</h4>
    <%=form_tag features_path, method: :get do %>
        <%= text_field_tag  :search, params[:search], placeholder: "identity token or title ...", presence: true %>
        <%= submit_tag "Search"%>
    <%end%><br>
</section>





      
