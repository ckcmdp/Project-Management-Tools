<section class="container">
<%= form_for ([@feature, @feature.comments.build]) do |f| %>
        <div class="field">
            <div class="control">
                <%= f.text_area :comment, input_html: { class: 'textarea' }, wrapper:false, label_html: { class: 'label' } %>
            </div>
        </div><br>
        <%= f.button :submit, class: "but btn-primary" %>
<% end %>   
</section>